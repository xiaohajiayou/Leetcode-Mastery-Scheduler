{
    "manifest_version": 3,
    "name": "Leetcode Mastery Scheduler",
    "version": "0.1.4",
    "author": "Hacode",
    "description": "Leetcode-Mastery-Scheduler tracks your LeetCode progress and prompt you to review based FSRS",
    "homepage_url": "https://github.com/xiaohajiayou/Leetcode-Mastery-Scheduler",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false  
    },
    "icons": {
        "128": "assets/bear.png",
        "48": "assets/bear.png",
        "16": "assets/bear.png"
    },
    "action": {
        "default_icon": "assets/bear.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "unlimitedStorage",
        "storage"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://*.bilibili.com/*",     
                "https://*.youtube.com/*",      
                "https://*.douyu.com/*",        
                "https://*.huya.com/*",         
                "https://*.netflix.com/*",      
                "https://*.iqiyi.com/*",        
                "https://*.youku.com/*",        
                "https://v.qq.com/*",          
                "https://*.zhihu.com/*",        
                "https://*.weibo.com/*",        
                "https://*.douyin.com/*",       
                "https://*.tiktok.com/*"        
            ],
            "js": [
                "dist/reminder.js"
            ],
            "run_at": "document_end",  
            "all_frames": false        
        },
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "dist/leetcode.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://leetcode.cn/problems/*"
            ],
            "js": [
                "dist/leetcodecn.js"
            ],
            "run_at": "document_idle"
        }
    ]
}