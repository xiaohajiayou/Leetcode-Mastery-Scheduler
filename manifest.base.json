{
    "manifest_version": 3,
    "name": "Leetcode Mastery Scheduler",
    "version": "0.1.6",
    "author": "Hacode",
    "description": "Leetcode-Mastery-Scheduler tracks your LeetCode progress and prompt you to review based FSRS",
    "homepage_url": "https://github.com/xiaohajiayou/Leetcode-Mastery-Scheduler",
    "icons": {
        "128": "assets/bear.png",
        "48": "assets/bear.png",
        "16": "assets/bear.png"
    },
    "action": {
        "default_icon": "assets/bear.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "unlimitedStorage",
        "storage",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://dav.jianguoyun.com/*",
        "https://*.jianguoyun.com/*"
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "dist/leetcode.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://leetcode.cn/problems/*"
            ],
            "js": [
                "dist/leetcodecn.js"
            ],
            "run_at": "document_idle"
        }
    ]
}